generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SurveyResponse {
  id                  Int     @id @default(autoincrement())
  user                User    @relation(fields: [userId], references: [id])
  userId              Int     @unique
  gender              String
  age                 Int
  therapyPreference   String
  beenToPsychologist  Boolean
  reasonForHelp       String
  expectations        String
  experiencingAnxiety Boolean
  takingMedication    Boolean
  chronicPain         Boolean
  financialStatus     String
  sleepHabits         String
  doctorPreferences   String
}

model User {
  id               Int             @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String          @unique
  password         String
  registrationDate DateTime        @default(now())
  journalEntries   Journal[]
  appointments     Appointment[]
  surveyResponseId Int?
  SurveyResponse   SurveyResponse?
  DoctorUsers      DoctorUser[]
}

model Doctor {
  id                Int           @id @default(autoincrement())
  firstName         String
  lastName          String
  gender            String
  yearsOfExperience Int
  specialization    String
  practicingCity    String
  contactInfo       String
  polyclinic        String
  appointments      Appointment[]
  DoctorUser        DoctorUser[]
}

model Appointment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  doctor    Doctor   @relation(fields: [doctorId], references: [id])
  doctorId  Int
  dateTime  DateTime
  confirmed Boolean  @default(false)
}

model Journal {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  entryDate DateTime
  entryText String
  entryMood Int
}

model RelaxationExercise {
  id                  Int    @id @default(autoincrement())
  exerciseName        String
  exerciseDescription String
  exercisePhoto       String
}

model DoctorUser {
  id       Int    @id @default(autoincrement())
  doctor   Doctor @relation(fields: [doctorId], references: [id])
  doctorId Int
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
}
